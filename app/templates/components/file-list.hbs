

<div class="padded">
<button id="party" class="btn btn-primary" onclick={{action 'selectDir'}}>Open Directory</button>
</div>
<div class="padded">
  <table class="table table-striped">
    <thead class="thead">
      <tr>
        <th></th>
        <th>Name</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      {{#each fileList as |file|}}
      <tr>
        {{#if file.isDirectory}}
        <td><div class="folder-icon"></div></td>
         <td><a href="" {{action "openDir" file.filePath}}>{{file.base}}</a></td>
           <td>{{file.fileExt}}</td>
        {{else}}
        <td></td>
        {{#if (or (eq file.fileExt  "csv" )(eq file.fileExt  "dxf" )(eq file.fileExt  "str" ))}}
          <td><a href="" {{action "openFile" file.filePath}}>{{file.base}}</a></td>
        {{else}}
          <td>{{file.base}}</td>
        {{/if}}
          <td>{{file.fileExt}}</td>
        {{/if}}
      
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
